<!DOCTYPE html>
<html>
  <head>
    <title>KiwiMusic</title>

    <% if current_user %>
      <%= "Welcome, #{current_user.email}" %>
    <% else %>
      <%= "You are not signed in!" %>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>

  <% if current_user %>
    <form class="" action="<%= session_url %>" method="post">
      <input type="hidden" name="_method" value="destroy">
      <input type="submit" name="" value="log out">
    </form>
  <% else %>
    <a href="/session/new"><input type="submit" value="log in"></a>
  <% end %>


</html>
